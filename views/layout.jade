doctype 5
html(lang="en")
head
    title Iris
    link(rel="stylesheet", href="/css/bootstrap.css")
    link(rel="stylesheet", href="/css/font-awesome.css")
    link(rel="stylesheet", href="/css/iris.css")
    style.
        html, body { background-color: #eee; }
        body { padding-top: 50px; }
        .content {
            background-color: white;
            padding: 20px; margin: 0 -20px;
            -webkit-border-radius: 0 0 6px 6px;
               -moz-border-radius: 0 0 6px 6px;
                    border-radius: 0 0 6px 6px;
            -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.15);
               -moz-box-shadow: 0 1px 2px rgba(0,0,0,.15);
                    box-shadow: 0 1px 2px rgba(0,0,0,.15);
        }
        .page-header {
            background-color: #f5f5f5;
            padding: 20px 20px 10px;
            margin: -20px -20px 20px;
        }
        .content .col-md-8,
        .content .col-md-4 {
            min-height: 300px;
        }
        /* Give a quick and non-cross-browser friendly divider */
        .content .col-md-4 {
            margin-left: 0;
            padding-left: 19px;
        }
    script(type="text/javascript", src="/js/require.js")
    script(type="text/javascript").
        require(['/js/config.js'], function () {
            require(['/js/frontpage.js']);
        });
    block scripts
body
    .navbar.navbar-default.navbar-fixed-top
        .navbar-header
            a.navbar-brand(href="/") Iris
        .collapse.navbar-collapse.navbar-ex1-collapse
            ul.nav.navbar-nav(id="nav")

    #container.container
        .content
            #error.alert.alert-error(style="display:none")
            #content
                block content
    footer()
